<div class="container py-4">
  <div class="oauth-card">
    <div class="el-card__body">
      <h1 class="card-title">
        Chỉnh sửa ứng dụng
      </h1>
    </div>
    <%= form_for @app, html: {class: "px-3 pb-2"} do |f| %>
      <%= render "shared/error_messages", object: @app %>
      <div class="form-group">
        <label for="">Tên ứng dụng</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="">ID ứng dụng</label>
        <%= f.text_field :id, class: "form-control", disabled: true %>
      </div>
      <div class="form-group">
        <label for="">Khóa bí mật</label>
        <%= password_field_tag :secret_key, @app.secret_key, class: "form-control mb-3", disabled: true %>
        <%= link_to "Hiển thị", "javascript:void(0);", class: "btn-new", onclick: "$('#secret_key').attr('type', 'text');" %>
        <%= link_to "Đổi khóa bí mật", secret_keys_oauth_app_path(@app), class: "btn-delete", data: {confirm: "Chắc chắn đổi?"} %>
      </div>
      <div class="form-group">
        <label for="">Trang chủ</label>
        <%= f.text_field :home_page, class: "form-control"%>
      </div>
      <div class="form-group">
        <label for="">Mô tả</label>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="">Callback URL</label>
        <%= f.text_field :callback_url, class: "form-control"%>
      </div>
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    <% end %>
  </div>
</div>
