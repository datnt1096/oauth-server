<div class="container py-4">
  <div class="oauth-card">
    <div class="el-card__body">
      <h1 class="card-title">
        Thêm mới ứng dụng
      </h1>
    </div>
    <%= form_for @app, html: {class: "px-3 pb-2"} do |f| %>
      <%= render "shared/error_messages", object: @app %>
      <div class="form-group">
        <label for="">Tên ứng dụng</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="">Trang chủ</label>
        <%= f.text_field :home_page, class: "form-control"%>
      </div>
      <div class="form-group">
        <label for="">Mô tả</label>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="">Callback URL</label>
        <%= f.text_field :callback_url, class: "form-control"%>
      </div>
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success">Tạo mới</button>
      </div>
    <% end %>
  </div>
</div>
